<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cah_ngganteng.menghitungccmesin.CCmesin">

    <TextView
        android:text="Menghitung CC Mesin dan Perbandingan Kompresi"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="10sp"
        android:layout_width="294dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Diameter Cylinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/diameterslinder"
        android:ems="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Panjang Langkah (Stroke)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/stroke"
        android:ems="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Jumlah Cylinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/jmlhselinder"
        android:ems="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/Hitung"
        android:onClick="hitungCC"
        android:text="Hitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:ems="6"
        android:textSize="30dp"
        android:id="@+id/ehasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
